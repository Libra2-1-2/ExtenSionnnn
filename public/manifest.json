{
	"name": "Tool Scan",
	"version": "1.0.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "./static/js/content.js",
		"type": "module"
	},
	"description": "Tool scan security",
	"author": "",
	"permissions": [
		"activeTab",
		"tabs",
		"alarms",
		"storage",
		"downloads",
		"scripting",
		"notifications",
		"contextMenus"
	],
	"host_permissions": [
		"*://*/*"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "img/icon_16.png",
			"32": "img/icon_32.png",
			"48": "img/icon_48.png",
			"128": "img/icon_128.png"
		}
	},
	"icons": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"warning.html",
				"warning.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"settings": {
		"apikey": "your_actual_api_key_here"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content1.js"
			]
		}
	]
}